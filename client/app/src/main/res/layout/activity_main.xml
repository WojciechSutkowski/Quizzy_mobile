<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="220dp"
                android:layout_height="118dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/wave" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="94dp"
                android:layout_height="51dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="156dp"
                android:layout_marginLeft="156dp"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="161dp"
                android:layout_marginRight="161dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your favorite category and try-out yourself  "
                android:textColor="#FFFFFF"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="25dp"
                />

            <RelativeLayout
                android:id="@+id/football"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:onClick="switchActivity"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/football" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Football" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/programming"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/programming" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Programming" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/movies"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/movies" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Movies" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/geography"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/geography" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Geography" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/series"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/series" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Series" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gaming"
                android:layout_width="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/gaming" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Gaming" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>